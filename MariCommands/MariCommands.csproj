<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <PackageId>MariCommands</PackageId>
    <Version>1.0.0.1-alpha</Version>
    <Authors>renanrcp</Authors>
    <Company>MariBot</Company>
    <Description>A .NET Core full modular and generic command lib inspired in ASP.NET Core</Description>
    <Copyright>2019 - 2020 renanrcp. All rights reserved.</Copyright>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/MariBotOfficial/MariCommands</PackageProjectUrl>
    <PackageIcon>MariDiscordRestIcon.png</PackageIcon>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>
  
  <ItemGroup>
    <None Include="MariDiscordRestIcon.png" Pack="true" Visible="false" PackagePath="" />
    <None Include="..\LICENSE" Pack="true" Visible="true" PackagePath="" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="MariGlobals" Version="2.0.1-alpha" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.1.5" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="3.1.5" />
    <PackageReference Include="System.Collections.Immutable" Version="1.7.1" />
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>MariCommands.Tests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

</Project>
